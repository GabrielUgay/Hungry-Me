<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="20dp"
        tools:context=".MainActivity7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose a Restaurant"
                android:fontFamily="@font/abeezee_italic"
                android:textColor="#202020"
                android:textFontWeight="800"
                android:textSize="25dp"
                android:layout_margin="20dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/mangInasal"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:background="@drawable/group14"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="0dp">

                    <ImageView
                        android:id="@+id/inasal"
                        android:layout_width="wrap_content"
                        android:layout_height="122dp"
                        android:layout_marginTop="20dp"
                        app:srcCompat="@drawable/mang_peping" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/inter_medium"
                        android:text="Kainan ni Mang Peping"
                        android:textColor="#202020"
                        android:textSize="18dp" />

                    <!-- #7EEFDE -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="2dp"
                        android:fontFamily="@font/inter_medium"
                        android:text="Filipino Restaurant"
                        android:textColor="#202020"
                        android:textSize="12dp" />

                </LinearLayout>

                <FrameLayout
                    android:id="@+id/mangInasalCart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="90dp"
                    android:layout_marginStart="15dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/rec2405"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/shop"/>
                </FrameLayout>


            </LinearLayout>









            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/jollibee"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/group14"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="0dp">

                    <ImageView
                        android:id="@+id/jolibee"
                        android:paddingHorizontal="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="142dp"
                        app:srcCompat="@drawable/ciudad" />

                    <!-- #7EEFDE -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/inter_medium"
                        android:text="Ciudad Elmina"
                        android:textColor="#202020"
                        android:textSize="18dp" />

                    <!-- #7EEFDE -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="2dp"
                        android:fontFamily="@font/inter_medium"
                        android:text="Fishing Village Resort &amp; Restaurant"
                        android:textColor="#202020"
                        android:textSize="12dp" />

                </LinearLayout>

                <FrameLayout
                    android:id="@+id/jollibeeCart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="90dp"
                    android:layout_marginStart="15dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/rec2405"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/shop"/>
                </FrameLayout>

            </LinearLayout>










            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/greenwichLinearLayout"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="50dp"
                    android:background="@drawable/group14"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="0dp">

                    <ImageView
                        android:id="@+id/greenwich"
                        android:layout_width="234dp"
                        android:layout_marginTop="25dp"
                        android:layout_height="120dp"
                        app:srcCompat="@drawable/matutina" />

                    <!-- #7EEFDE -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/inter_medium"
                        android:text="Matutina"
                        android:textColor="#202020"
                        android:textSize="18dp" />

                    <!-- #7EEFDE -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="2dp"
                        android:fontFamily="@font/inter_medium"
                        android:text="Gerry's Seafood House"
                        android:textColor="#202020"
                        android:textSize="12dp" />

                </LinearLayout>

                <FrameLayout
                    android:id="@+id/greenwichCart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="90dp"
                    android:layout_marginStart="15dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/rec2405"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/shop"/>
                </FrameLayout>

            </LinearLayout>


        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>