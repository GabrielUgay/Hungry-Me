<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity14">

    <ImageView
        android:id="@+id/backToLoginPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back2"
        android:tint="@color/black"
        android:layout_marginTop="50dp"
        android:layout_marginStart="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check your email"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/labelSent"
        android:layout_width="306dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_semibold"
        android:text=""
        android:textColor="#202020"
        android:textSize="12dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/rect16"
            android:fontFamily="@font/poppins_medium"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="#202020"
            android:textColorHint="#202020"
            android:textSize="12sp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/et2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/rect16"
            android:fontFamily="@font/poppins_medium"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="#202020"
            android:textColorHint="#202020"
            android:textSize="12sp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/et3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/rect16"
            android:fontFamily="@font/poppins_medium"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="#202020"
            android:textColorHint="#202020"
            android:textSize="12sp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/et4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/rect16"
            android:fontFamily="@font/poppins_medium"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="#202020"
            android:textColorHint="#202020"
            android:textSize="12sp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/et5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/rect16"
            android:fontFamily="@font/poppins_medium"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="#202020"
            android:textColorHint="#202020"
            android:textSize="12sp"
            android:gravity="center"/>

    </LinearLayout>


    <FrameLayout
        android:id="@+id/resetPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="313dp"
            android:layout_height="49dp"
            android:background="@drawable/rect15"
            android:backgroundTint="#008700" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Verify Code"
            android:textSize="12dp"
            android:fontFamily="@font/inter_medium"
            android:textFontWeight="800"
            android:layout_gravity="center" />

    </FrameLayout>


</LinearLayout>